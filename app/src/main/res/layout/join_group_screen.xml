<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/first_layer">

    <android.support.constraint.Guideline
        android:id="@+id/guidelinevertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/create_new_group_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="@string/join_group_screen_name"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/insert_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="52dp"
        android:text="@string/insert"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/name_of_group_join"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/name_of_group_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="52dp"
        android:backgroundTint="#ffffff"
        android:ems="13"
        android:hint="@string/name_of_group_str"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#d3d3d3"
        app:layout_constraintBottom_toTopOf="@+id/guidelinehorizontal"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next_join_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/oval_white_button"
        android:text="@string/join"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/nfc"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/nfc"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/next_join_btn"
        app:layout_constraintEnd_toStartOf="@+id/guidelinevertical"
        app:layout_constraintTop_toBottomOf="@+id/name_of_group_join"
        app:layout_constraintVertical_bias="0.508"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/qrcode"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/next_join_btn"
        app:layout_constraintStart_toStartOf="@+id/guidelinevertical"
        app:layout_constraintTop_toBottomOf="@+id/name_of_group_join"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>